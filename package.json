  "license": "GPL-2.0+",
  "devDependencies": {
    "rimraf": "^2.6.2",
    "mkdirp": "^0.5.1",
    "autoprefixer": "^7.1.2",
    "stylelint": "^8.0.0",
    "node-sass": "^4.7.2",
    "postcss-cli": "^5.0.0",
    "eslint": "^4.17.0",
    "eslint-config-wordpress": "^2.0.0",
    "uglify-js": "^3.3.10"
  },
  "scripts": {
    "clean": "rimraf assets/{css/*,images/*,js/}",
    "phpcs": "vendor/bin/phpcs -v --colors --extensions=php --ignore=\"*/vendor/*,*/node_modules/*\" --standard=phpcs.ruleset.xml *.php || true",
    "lintjs": "eslint src/assets/js/**",
    "uglify": "mkdirp assets/js && uglifyjs src/assets/js/*.js -o assets/js/custom.js -m --source-map && uglifyjs src/assets/js/*.js -o assets/js/custom.min.js -m -c",
    "lintcss": "",
    "sass": "",
    "build:css": "",
    "build:js": "npm run lintjs -s && npm run uglify -s",
    "test": ""
  }
}
