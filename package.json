{
  "name": "hrs.wsu.edu",
  "version": "2.0.0",
  "repository": {
    "type": "git",
    "url": "https://github.com/washingtonstateuniversity/hrs.wsu.edu"
  },
  "author": "washingtonstateuniversity",
  "contributors": [
    {
      "name": "Adam Turner"
    }
  ],
  "license": "GPL-2.0+",
  "browserslist": [
    "> 1%",
    "ie 11",
    "Firefox ESR"
  ],
  "devDependencies": {
    "@babel/core": "^7.8.4",
    "@babel/plugin-syntax-dynamic-import": "^7.8.3",
    "@babel/polyfill": "^7.8.3",
    "@babel/preset-env": "^7.8.4",
    "@wordpress/babel-preset-default": "^4.9.0",
    "@wordpress/eslint-plugin": "^3.3.0",
    "autoprefixer": "^9.7.4",
    "babel-eslint": "^10.0.3",
    "babel-loader": "^8.0.5",
    "cssnano": "^4.1.10",
    "eslint": "^6.8.0",
    "eslint-loader": "3.0.3",
    "mkdirp": "^1.0.3",
    "node-sass": "^4.13.1",
    "npm-run-all": "^4.1.5",
    "postcss-cli": "^7.1.0",
    "rimraf": "^3.0.1",
    "stylelint": "^13.0.0",
    "svgo": "^1.3.2",
    "webpack": "^4.41.5",
    "webpack-cli": "^3.3.10",
    "webpack-merge": "^4.2.2"
  },
  "scripts": {
    "test:php": "vendor/bin/phpcs -v --colors --extensions=php --ignore=\"*/vendor/*,*/node_modules/*\" --standard=phpcs.ruleset.xml *.php parts/ includes/ articles/",
    "test:js": "eslint src/js/**",
    "test:css": "stylelint \"src/scss/**/*.scss\"",
    "dev:script": "webpack --progress",
    "style:sass": "node-sass --output-style expanded src/scss -o assets/css",
    "style:prefix": "postcss assets/css/style.css -u autoprefixer --no-map -o ./style.css",
    "style:nano": "postcss assets/css/*.css --map -u autoprefixer -u cssnano --replace",
    "script:webpack": "webpack --env.production --progress",
    "image:setup": "mkdirp assets/images/icons",
    "image:icon": "svgo --config=.svgo.yml -f src/images/svg -o assets/images/icons",
    "image:move": "cp 'src/images/1x1.trans.gif' assets/images/1x1.trans.gif",
    "build:style": "run-s \"style:*\"",
    "build:script": "run-p \"script:*\"",
    "build:image": "run-s \"image:*\"",
    "clean": "rimraf assets/{css/,images/,js/}",
    "test": "run-p \"test:*\"",
    "prebuild": "run-p clean test",
    "build": "run-p \"build:*\""
  }
}
