{
	"name": "@washingtonstateuniversity/hrs.wsu.edu",
	"version": "3.1.0",
	"description": "The WordPress theme for WSU Human Resource Services.",
	"author": "Adam Turner",
	"contributors": [
		{
			"name": "washingtonstateuniversity"
		}
	],
	"license": "GPL-3.0-or-later",
	"keywords": [
		"WordPress",
		"Theme"
	],
	"homepage": "https://github.com/washingtonstateuniversity/hrs.wsu.edu/blob/stable/README.md",
	"repository": {
		"type": "git",
		"url": "git+https://github.com/washingtonstateuniversity/hrs.wsu.edu.git"
	},
	"bugs": {
		"url": "https://github.com/washingtonstateuniversity/hrs.wsu.edu/issues"
	},
	"devDependencies": {
		"@babel/core": "^7.17.2",
		"@babel/runtime": "^7.17.2",
		"@wordpress/babel-preset-default": "^6.5.0",
		"@wordpress/dependency-extraction-webpack-plugin": "^3.3.0",
		"@wordpress/eslint-plugin": "^9.3.0",
		"@wordpress/npm-package-json-lint-config": "^4.1.0",
		"@wordpress/stylelint-config": "^20.0.0",
		"babel-loader": "^8.2.3",
		"copy-webpack-plugin": "^10.2.4",
		"cssnano": "^5.0.12",
		"eslint": "^8.3.0",
		"npm-package-json-lint": "^5.4.2",
		"npm-run-all": "^4.1.5",
		"postcss": "^8.4.4",
		"postcss-cli": "^9.0.2",
		"postcss-import": "^14.0.2",
		"postcss-preset-env": "^7.0.1",
		"prettier": "npm:wp-prettier@^2.2.1-beta-1",
		"resolve-bin": "^1.0.0",
		"rimraf": "^3.0.2",
		"source-map-loader": "^3.0.1",
		"stylelint": "^14.4.0",
		"stylelint-a11y": "^1.2.3",
		"webpack": "^5.68.0",
		"webpack-bundle-analyzer": "^4.5.0",
		"webpack-cli": "^4.9.2"
	},
	"browserslist": [
		"> 1%",
		"ie 11",
		"Firefox ESR"
	],
	"scripts": {
		"build": "NODE_ENV=production run-s clean test 'build:*'",
		"build:scripts": "webpack",
		"build:styles": "postcss 'src/*.css' --dir build/",
		"clean": "rimraf build/",
		"lint:scripts": "eslint '*.js' 'src/**/*.js'",
		"lint:styles": "stylelint 'src/**/*.css'",
		"lint:pkg": "npmPkgJsonLint .",
		"lint:php": "composer lint",
		"fix:scripts": "eslint --fix '*.js' 'src/**/*.js'",
		"fix:php": "composer format",
		"start": "run-p 'build:*'",
		"fix": "run-p 'fix:*'",
		"test": "run-p 'lint:*'"
	}
}
