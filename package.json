{
  "name": "hrs.wsu.edu",
  "version": "0.20.1",
  "repository": {
    "type": "git",
    "url": "https://github.com/washingtonstateuniversity/hrs.wsu.edu"
  },
  "author": "washingtonstateuniversity",
  "contributors": [
    {
      "name": "Adam Turner"
    }
  ],
  "license": "GPL-2.0+",
  "browserslist": [
    "> 1%",
    "ie 11",
    "Firefox ESR"
  ],
  "devDependencies": {
    "@babel/core": "^7.1.5",
    "@babel/plugin-syntax-dynamic-import": "^7.0.0",
    "@babel/polyfill": "^7.0.0",
    "@babel/preset-env": "^7.1.5",
    "autoprefixer": "^9.3.x",
    "babel-eslint": "^10.0.1",
    "babel-loader": "^8.0.4",
    "cpx": "^1.5.x",
    "cssnano": "^4.1.7",
    "eslint": "^5.8.0",
    "eslint-config-wordpress": "^2.0.x",
    "eslint-loader": "^2.1.1",
    "mkdirp": "^0.5.1",
    "node-sass": "^4.10.0",
    "postcss-cli": "^6.0.0",
    "rimraf": "^2.6.x",
    "stylelint": "^9.7.1",
    "svgo": "^1.1.1",
    "webpack": "^4.25.1",
    "webpack-cli": "^3.1.2",
    "webpack-merge": "^4.1.4"
  },
  "scripts": {
    "clean": "rimraf assets/{css/,images/,js/}",
    "phpcs": "vendor/bin/phpcs -v --colors --extensions=php --ignore=\"*/vendor/*,*/node_modules/*\" --standard=phpcs.ruleset.xml *.php parts/ includes/ articles/ templates/",
    "lintjs": "eslint src/assets/js/**",
    "lintscss": "stylelint \"src/assets/scss/**/*.scss\"",
    "test": "npm run phpcs && npm run lintjs && npm run lintscss",
    "js:dev": "webpack --progress",
    "sass": "node-sass --output-style expanded src/assets/scss -o assets/css",
    "postsass": "postcss assets/css/style.css -u autoprefixer --no-map -o ./style.css && postcss assets/css/*.css --map --use autoprefixer --use cssnano --replace",
    "svgo": "mkdirp assets/images/icons && svgo --config=.svgo.yml -f src/assets/images -o assets/images && svgo --config=.svgo.yml -f src/assets/images/icons -o assets/images/icons",
    "build:css": "npm run lintscss && npm run sass",
    "build:js": "webpack --env.production --progress",
    "build:images": "npm run svgo && cpx \"src/assets/images/*.{png,jpg,gif}\" assets/images/ --update",
    "prebuild": "npm run clean && npm run phpcs",
    "build": "npm run build:css && npm run build:js && npm run build:images"
  },
  "dependencies": {
    "url-search-params-polyfill": "^5.0.0"
  }
}
